<div class="row">
    <div class="col-12">
        {{#if articles}} {{#each articles}}
        <div class="card w-90">
            <div class="card-header text-white bg-dark">
                <a href={{link}} target="_blank" class="text-white">
                    <h2>{{title}}</h2>
                </a>
            </div>
            <div class="card-body">
                <p class="card-text">
                    {{summary}}
                </p>
                <button data="{{_id}}" class="btn btn-warning note-btn">Readers Notes</button>
                <button data="{{_id}}" class="btn btn-danger delete-btn">Remove From Saved</button> {{#if byline}}&nbsp;
                <span>
                    <em>{{byline}}</em>
                </span> {{/if}}
            </div>
        </div>
        {{/each}} {{else}}
        <div class="card text-white bg-warning w-90 p-1">
            <div class="card-body text-center">
                No saved articles to display.
            </div>
        </div>
        {{/if}}
    </div>
</div>
<div class="modal fade" id="note-modal" tabindex="-1" role="dialog" aria-labelledby="successMessage" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Notes for Article
                    <span id="article-id"></span>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <ul class="list-group list-group-flush articles-available">
                    </ul>
                </div>
                <br/>
                <div class="form-group">
                    <label for="note-input" class="sr-only">Enter Note Here</label>
                    <textarea class="form-control" id="note-input" rows="3" placeholder="New Note"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" id="save-note">Save Note</button>
                <button type="button" class="btn btn-danger" id="cancel-note" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>